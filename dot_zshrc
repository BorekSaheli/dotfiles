    source /opt/homebrew/share/zsh-autosuggestions/zsh-autosuggestions.zsh
    # Catppuccin Mocha surface2 color for suggestions
    ZSH_AUTOSUGGEST_HIGHLIGHT_STYLE='fg=#585b70'
fi

