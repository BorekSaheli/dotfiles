# Syntax highlighting
if [ -f /opt/homebrew/share/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh ]; then
    source /opt/homebrew/share/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh
fi

# Starship configuration
export STARSHIP_CONFIG=~/.config/starship/starship.toml
eval "$(starship init zsh)"

# Conda setup - available but not auto-activated
# Use 'conda activate <env>' manually when needed
if [ -f "/Users/borek/tudelft-conda/etc/profile.d/conda.sh" ]; then
    . "/Users/borek/tudelft-conda/etc/profile.d/conda.sh"
    # Disable conda's auto prompt modification - let Starship handle it
    conda config --set changeps1 false 2>/dev/null
fi

# Kanata keyboard remapper (macOS only)
kanata() {
  if pgrep -x kanata > /dev/null; then
    echo "Kanata is already running (PID: $(pgrep -x kanata))"
  else
    echo "Starting kanata in background..."
    sudo /opt/homebrew/bin/kanata --cfg ~/.config/kanata/kanata.darwin.kbd > /dev/null 2>&1 &
    disown
    echo "Kanata started!"
  fi
}

kanata-stop() {
  sudo pkill kanata && echo "Kanata stopped" || echo "Kanata not running"
}
